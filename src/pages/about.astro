import Steps2 from "~/components/widgets/Steps2.astro";
import Layout from "~/layouts/PageLayout.astro";
import OurLocations from "~/components/common/OurLocations.astro";
const metadata = {
  title: "About us",
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: "~/assets/images/group.webp",
      alt: "All 4 officers",
    }}
  >
    <Fragment slot="title">
      To help others build
      <span class="text-accent dark:text-white highlight"> real software</span>
    </Fragment>

    <Fragment slot="subtitle"
      >The Software Development club aims to educate students, from the basics
      of <b>programming and software engineering</b> (semester 1) to <b
        >developing real applications and collaborating with others</b
      > (semester 2).
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Content
    isReversed
    tagline="About Us"
    title="Meet our team"
    subtitle="We too are just a group of high school students who are passionate about software development."
